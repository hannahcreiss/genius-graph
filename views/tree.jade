  body      
    div.container
      div.jumbotron#inputBlock
        h1 Graph Genius
        h4 Enter a few of your favorite artists to see what songs they've worked on together.
        form.form-horizontal(method='post', role='form')
         div.form-group
          div.col-xs-12.col-md-10
            input#demo.form-control(
              placeholder='My faves',
              required=true,
              type='text')
          div.col-xs-12.col-md-2
            button#submitArtistsButton.login.btn.btn-primary(type='submit') Submit                  

  script(type='text/javascript').
    (function(){
        var artistNames = !{JSON.stringify(artistNames)};
        $('#demo').tokens({
          keyCode : {
            UP: 38,
            DOWN: 40,
            BACKSPACE: 8,
            TAB: 9,
            ENTER: 13,
            ESC: 27,
            COMMA: 188,
            SPACE: 0
          },
          texts : {
            'close-text' : 'Ã—',
            'type-suggestions' : 'Start typing an artist\'s name',
            'no-results' : 'There are no results matching',
            'add-result' : 'Add "%s" to the list',
            'invalid-format' : '%s is not the correct format'
          },
          allowAddingNoSuggestion : false,
          source : artistNames
        });
      })();

    
    var artist_array = [];
    $("#submitArtistsButton").click(function(){
      $(".tokens-list-token-holder p").each(function(){
        artist_array.push($(this).text());
      })
      var artist_string = artist_array.toString();
      $('<input>', {
        "type": 'hidden',
        "val": artist_string,
        "name": 'artistString'
      }).appendTo("form");

    });   





 

 

      
      
    
